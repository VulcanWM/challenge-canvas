{
  "manifest_version": 3,
  "name": "Challenge Canvas",
  "version": "1.0.0",
  "description": "Visual sticky-note board for tracking challenge progress",
  "permissions": ["storage"],
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "action": {
    "default_title": "Challenge Canvas"
  },
  "background": {
    "service_worker": "background.js"
  }
}
